
<!-- <div class="row"> -->
  <div class="movie_list_image">
  <%= link_to image_tag(movie.image.url), movie_path(movie) if movie.image && movie.image.url %>
  </div>  
  <div class="movie_list_info">
    <p><%= link_to movie.title, movie_path(movie) %></p>
    <p>Release date: <strong><%= movie.release_date.strftime("%m/%d/%Y") %></strong></p>
    <p>Director: <strong><%= movie.director %></strong></p>
    <p>Duration: <strong><%= movie.runtime_in_minutes %> minutes</strong></p>
  </div>  
  <div class="movie_list_description">
    <p><%= movie.description %></p>
  </div> 
