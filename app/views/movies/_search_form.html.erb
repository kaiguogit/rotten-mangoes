<%= form_tag("/movies", {method:"get", role: "search"}) do %>
  <%= label_tag("Search For") %>
  <%= search_field_tag(:keyword) %>
  <%= label_tag(:duration, "Duration") %>
  <%= select_tag(:duration,
  options_for_select([['',"empty"],['< 90 mins', "short"], ['Between 90 and 120 mins', "medium"], ['> 120 mins', "long"]])) %>
  <%= submit_tag("Search") %>
<% end %>